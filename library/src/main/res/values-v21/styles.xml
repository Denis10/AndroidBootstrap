<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/theme_text_color_primary</item>
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="android:colorAccent">@color/theme_color_accent</item>
